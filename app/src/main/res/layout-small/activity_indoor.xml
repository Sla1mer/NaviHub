<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".examples.styles.IndoorNavigation">


    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:mapbox_cameraTargetLat="54.736125"
        mapbox:mapbox_cameraTargetLng="20.491273"
        mapbox:mapbox_cameraZoom="18">
    </com.mapbox.mapboxsdk.maps.MapView>

    <Button
        android:id="@+id/startButton2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/repeat1"
        android:onClick="onMyButtonClick"
        android:textColor="@color/mapboxWhite"
        mapbox:layout_constraintHorizontal_bias="0.96"
        mapbox:layout_constraintVertical_bias="0.96"
        mapbox:layout_constraintLeft_toLeftOf="parent"
        mapbox:layout_constraintRight_toRightOf="parent"
        mapbox:layout_constraintTop_toTopOf="parent"
        mapbox:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/infoPanel"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/info"
        android:onClick="onMyButtonClick"
        android:textColor="@color/mapboxWhite"
        mapbox:layout_constraintHorizontal_bias="0.03"
        mapbox:layout_constraintVertical_bias="0.96"
        mapbox:layout_constraintLeft_toLeftOf="parent"
        mapbox:layout_constraintRight_toRightOf="parent"
        mapbox:layout_constraintTop_toTopOf="parent"
        mapbox:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/Floor1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/etaj_button1"
        mapbox:layout_constraintHorizontal_bias="0.96"
        mapbox:layout_constraintVertical_bias="0.23"
        mapbox:layout_constraintLeft_toLeftOf="parent"
        mapbox:layout_constraintRight_toRightOf="parent"
        mapbox:layout_constraintTop_toTopOf="parent"
        mapbox:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/Floor2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/etaj2"
        mapbox:layout_constraintHorizontal_bias="0.96"
        mapbox:layout_constraintVertical_bias="0.4"
        mapbox:layout_constraintLeft_toLeftOf="parent"
        mapbox:layout_constraintRight_toRightOf="parent"
        mapbox:layout_constraintTop_toTopOf="parent"
        mapbox:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/Floor3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/etaj3"
        mapbox:layout_constraintHorizontal_bias="0.96"
        mapbox:layout_constraintVertical_bias="0.58"
        mapbox:layout_constraintLeft_toLeftOf="parent"
        mapbox:layout_constraintRight_toRightOf="parent"
        mapbox:layout_constraintTop_toTopOf="parent"
        mapbox:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/Floor4"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/etaj4"
        mapbox:layout_constraintHorizontal_bias="0.96"
        mapbox:layout_constraintVertical_bias="0.75"
        mapbox:layout_constraintLeft_toLeftOf="parent"
        mapbox:layout_constraintRight_toRightOf="parent"
        mapbox:layout_constraintTop_toTopOf="parent"
        mapbox:layout_constraintBottom_toBottomOf="parent"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="TextFields,HardcodedText" >

        <TextView
            android:id="@+id/label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Type here:" />

        <Button
            android:id="@+id/open"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dip"
            android:text="Open" />

        <Button
            android:id="@+id/close"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/open"
            android:layout_toLeftOf="@id/open"
            android:text="Close" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>