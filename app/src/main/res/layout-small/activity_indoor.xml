    <!--            android:id="@+id/server"-->
    <!--            android:layout_width="wrap_content"-->
    <!--            android:layout_height="wrap_content"-->
    <!--            android:layout_alignParentRight="true"-->
    <!--            android:layout_marginRight="100dp"-->
    <!--            android:layout_marginTop="50dp"-->
    <!--            android:text="Server" />-->
</FrameLayout>